            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>New_Legal_Case.Description</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>forDescription</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>New_Legal_Case.Legal_Status__c</assignToReference>
            <operator>Assign</operator>
