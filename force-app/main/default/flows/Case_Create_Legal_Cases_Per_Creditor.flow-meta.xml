        </assignmentItems>
        <assignmentItems>
            <assignToReference>New_Legal_Case.Priority</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Medium</stringValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>New_Legal_Case.RecordTypeId</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Legal_Team_Record_Type_ID</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>New_Legal_Case.Status</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>New</stringValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>New_Legal_Case.Subject</assignToReference>
            <operator>Assign</operator>
