<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Underwriter_When_Converted</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
    IsConverted, 
    ISBLANK(Underwriter__c)
)</errorConditionFormula>
    <errorMessage>Underwriter must be filled before converting the Lead.</errorMessage>
</ValidationRule>
