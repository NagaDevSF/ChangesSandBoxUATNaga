<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Restrict_Phone_Edit_For_SREDD</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISCHANGED(Phone),
    $User.UserRoleId = &quot;00E5g000001XYZ&quot;
)</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Users with the Sales Rep Everyday Debt role are not allowed to edit the Phone field.</errorMessage>
</ValidationRule>
