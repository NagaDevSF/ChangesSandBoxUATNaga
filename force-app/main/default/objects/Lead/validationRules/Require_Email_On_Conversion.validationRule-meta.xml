<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Email_On_Conversion</fullName>
    <active>true</active>
    <errorConditionFormula>ISBLANK(Email) &amp;&amp; IsConverted</errorConditionFormula>
    <errorDisplayField>Email</errorDisplayField>
    <errorMessage>Email is required before converting the Lead.</errorMessage>
</ValidationRule>
