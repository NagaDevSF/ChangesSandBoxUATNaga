<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>VR2_Require_an_answer_if_completing</fullName>
    <active>true</active>
    <errorConditionFormula>AND(Completed__c, ISBLANK(TEXT(Rep_Answer__c)))</errorConditionFormula>
