<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Restrict_LeadSource_Update</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
    ISCHANGED(Lead_Source__c),
    OR(
        $Profile.Name = &quot;Sales Rep&quot;,
        $Profile.Name = &quot;Sales Manager&quot;
    )
)</errorConditionFormula>
    <errorMessage>You are not allowed to update the Lead Source field.</errorMessage>
</ValidationRule>
